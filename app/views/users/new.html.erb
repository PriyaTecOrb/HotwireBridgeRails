<div class="container">
  <h1>Register New User</h1>
  <div data-controller="bridge--form" data-bridge--form-type-value="signup">
		<%= form_with(model: @user, url: users_path) do |f| %>
			<div class="field">
				<%= f.label :username %>
				<%= f.text_field :username, required: true, class: 'form-control' %>
			</div>

			<div class="field mt-3">
				<%= f.label :email %>
				<%= f.email_field :email, required: true, class: 'form-control' %>
			</div>

			<div class="field mt-3">
				<%= f.label :password %>
				<%= f.password_field :password, required: true, class: 'form-control' %>
			</div>

			<div class="actions mt-4">
				<%= f.submit 'Register', class: 'btn btn-primary' %>
				<%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
			</div>
		<% end %>
	</div>
</div>

<style>
  .container {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
  }
  .field {
    margin-bottom: 1rem;
  }
  .field label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  .actions {
    display: flex;
    gap: 1rem;
  }
</style>